<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="LoginForm" parallel="methods" thread-count="20">
    <test name="Elements">
        <parameter name="browser" value="Firefox" />
        <classes>
            <class name="LoginForm.Elements.ElementsTest" />
        </classes>
    </test>
    <test name="Errors">
        <parameter name="browser" value="Firefox" />
        <classes>
            <class name="LoginForm.Errors.ErrorMessagesTest" />
        </classes>
    </test>
    <test name="UserCanLogin">
        <parameter name="browser" value="Firefox" />
        <classes>
            <class name="LoginForm.UserCanLogin.UserLoginTest" />
        </classes>
    </test>
</suite>